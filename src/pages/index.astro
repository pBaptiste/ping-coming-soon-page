---
import { Image } from 'astro:assets';
import illustration from '../images/illustration-dashboard.png'
import logo from '../images/logo.svg'
import Layout from '../layouts/Layout.astro';
import EmailForm from '../components/EmailForm.astro'
import SocialLinks from '../components/SocialLinks.astro';
---

<Layout title="Ping Coming Soon">
	<main class="min-h-screen flex flex-col items-center justify-center mt-20 mb-[37px] md:mb-[49px]">
		<header class="mb-8 md:mb-10">
			<Image src={logo} alt="Website Logo" class='w-[56px] md:w-[90px]'/>
		</header>

		<section class="max-w-[320px] md:max-w-[637px] mb-[120px] md:mb-[72px]">
			<h1 class="text-muted text-center text-[1.375rem] md:text-5xl font-light leading-8 md:leading-[3.75rem] mb-4">We are launching <span class="text-primary font-bold">soon!</span></h1>
			<p class="text-primary text-center text-xs md:text-xl font-light mb-8 md:mb-10">Subscribe and get notified</p>
			
			<div class=" mb-[72px] md:mb-[94px]">
				<EmailForm />
			</div>
			
			<div class="w-[320px] md:w-[640px] h-[192px] md:h-[383px]">
				<Image src={illustration} alt="" class='w-full h-full object-cover'/>
			</div>
		</section>

		<footer>
			<SocialLinks />
			<p class="mt-[27px] md:mt-[25px] text-muted-2 text-[0.625rem] md:text-xs font-light">&copy; Copyright Ping. All rights reserved.</p>
		</footer>
	</main>
</Layout>

